#!/bin/bash

set -o errexit

function show_usage {
    echo "Usage: $(basename $0)
    --host=<string>
       - Hostname of Owlim instance
    --port=<number>
       - Portnumber of Owlim instance
"
}

TEMP=$(getopt \
    --options "" \
    --long host::,port:: \
    -n "$0" -- "$@")

eval set -- "$TEMP"

while true ; do
        case "$1" in
                --host)
                    case "$2" in
                        "") show_usage ; exit 1 ;;
                        *) HOST=$2 ; shift 2 ;;
                    esac ;;
                --port)
                    case "$2" in
                        "") show_usage ; exit 1 ;;
                        *) PORT=$2 ; shift 2;;
                    esac ;;
                --) shift ; break ;;
                *) echo "Unknown option specified." ; exit 1 ;;
        esac
done

if [ -z "${HOST}" -o -z "${PORT}" ]; then
    show_usage
    exit 0
fi
